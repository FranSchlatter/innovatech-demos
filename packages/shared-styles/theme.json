{
  "name": "Healthcare Professional Design System",
  "version": "2.1.0",
  "description": "Modern healthcare aesthetic - professional, trustworthy, accessible",
  "palette": {
    "primary": "#0F3F4C",
    "primary-contrast": "#FFFFFF",
    "accent": "#0B7377",
    "accent-light": "#00D9FF",
    "secondary": "#14919B",
    "background": "#F8FAFB",
    "surface": "#FFFFFF",
    "text": "#1A2332",
    "muted": "#6B7280",
    "success": "#10B981",
    "warning": "#F59E0B",
    "danger": "#EF4444"
  },
  "darkPalette": {
    "primary": "#E8F4F8",
    "primary-contrast": "#0F1419",
    "accent": "#00D9FF",
    "accent-light": "#38BDF8",
    "secondary": "#22D3EE",
    "background": "#0F1419",
    "surface": "#1A2332",
    "text": "#E8F4F8",
    "muted": "#9CA3AF",
    "success": "#6EE7B7",
    "warning": "#FBBF24",
    "danger": "#FECACA"
  },
  "typography": {
    "font-family-serif": "'Playfair Display', 'Didot', 'Cormorant', Georgia, serif",
    "font-family-sans": "'Inter', 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
    "font-sizes": {
      "h1": "3rem",
      "h2": "2rem",
      "h3": "1.5rem",
      "base": "1rem",
      "small": "0.875rem"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "layout": {
    "container-width": "1400px",
    "gutter": "1.5rem",
    "radius": "12px",
    "shadow-soft": "0 2px 8px rgba(15, 63, 76, 0.06)",
    "shadow-medium": "0 8px 24px rgba(15, 63, 76, 0.12)",
    "shadow-lg": "0 16px 40px rgba(15, 63, 76, 0.16)"
  },
  "transitions": {
    "fast": "200ms",
    "medium": "400ms",
    "slow": "600ms"
  }
}
